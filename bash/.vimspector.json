{
  "configurations": {
    "deno": {
      "adapter": "vscode-node",
			"filetypes": [ "javascript" ],
      "configuration": {
        "request": "launch",
        "protocol": "auto",
        "stopOnEntry": true,
        "console": "integratedTerminal",
				"runtimeExecutable": "~/.deno/bin/deno",
        "cwd": "${workspaceFolder}",
				"runtimeArgs": [ "run", "--allow-all", "--inspect-brk=127.0.0.1:9229" ],
        "program": "${file}",
				"port": 9229
      }
		}
  }
}
